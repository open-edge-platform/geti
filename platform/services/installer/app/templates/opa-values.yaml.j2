  registry_address: {{ geti_registry }}
  docker_namespace: open-edge-platform/geti
  tag: {{ product_build }}

{% if registry %}
image: 
  registry: {{ registry }}
  repository: local-third-party
  name: opa:0.66.0.4-istio

imagePullSecrets:
  - name: regcred
{%  endif %}

opa_config:
  oci:
    name: impt-internal-registry
    url: "{{ 'https://impt-internal-registry' if internal_registry else 'http://' ~ external_registry }}:5000"
  bundles:
    oci:
      resource: "{{ 'impt-internal-registry' if internal_registry else external_registry }}/open-edge-platform/geti/opa-bundle"

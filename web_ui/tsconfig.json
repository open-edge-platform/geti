{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["jest"],
    "paths": {
      "opencv": ["./public/assets/opencv/4.9.0/opencv.js"],
      "@shared/*": ["./src/shared/*"]
    }
  },
  "include": [
    "src",
    "tests",
    "rsbuild.config.ts",
    "dev-proxy.ts",
  ],
  "exclude": [
    "./src/opencv-types/**"
  ]
}
